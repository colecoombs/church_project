# Church Website Environment Configuration

# Server Configuration
NODE_ENV=development
PORT=3001

# Frontend URL (for CORS)
FRONTEND_URL=http://localhost:3000

# JWT Secrets (CHANGE THESE IN PRODUCTION!)
JWT_SECRET=your-super-secret-jwt-key-change-in-production-make-it-very-long-and-random
JWT_REFRESH_SECRET=your-super-secret-refresh-key-change-in-production-make-it-very-long-and-random

# Database Configuration
DATABASE_PATH=./server/database/church.db

# File Upload Configuration
MAX_FILE_SIZE=104857600
UPLOAD_PATH=./uploads

# Security Configuration
MAX_LOGIN_ATTEMPTS=5
LOCKOUT_DURATION=900000
RATE_LIMIT_WINDOW=900000
RATE_LIMIT_MAX=100
AUTH_RATE_LIMIT_MAX=5

# Logging
LOG_LEVEL=info

# Session Configuration
SESSION_DURATION=900000
REFRESH_TOKEN_DURATION=2592000000

# Email Configuration (optional - for future features)
# SMTP_HOST=
# SMTP_PORT=
# SMTP_USER=
# SMTP_PASS=

# Social Media (default values)
DEFAULT_FACEBOOK_URL=https://facebook.com/gracecommunity
DEFAULT_INSTAGRAM_URL=https://instagram.com/gracecommunity
DEFAULT_YOUTUBE_URL=https://youtube.com/gracecommunity
DEFAULT_TWITTER_URL=https://twitter.com/gracecommunity

# Church Information (default values)
DEFAULT_CHURCH_NAME=Grace Community Church
DEFAULT_CHURCH_ADDRESS=123 Faith Street, Your City, State 12345
DEFAULT_CHURCH_PHONE=(555) 123-4567
DEFAULT_CHURCH_EMAIL=info@gracecommunity.org