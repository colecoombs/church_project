{
  "name": "grace-community-church",
  "version": "1.0.0",
  "description": "Modern church website with video management and secure authentication",
  "main": "server/server.js",
  "scripts": {
    "dev": "nodemon server/server.js",
    "start": "node server/server.js",
    "build": "npm install --production",
    "test": "jest",
    "dev:frontend": "python -m http.server 3000",
    "dev:backend": "nodemon server/server.js",
    "dev:full": "concurrently \"npm run dev:backend\" \"npm run dev:frontend\"",
    "postinstall": "node -e \"const fs = require('fs'); if (!fs.existsSync('uploads')) fs.mkdirSync('uploads', { recursive: true });\""
  },
  "keywords": [
    "church",
    "website",
    "video-management",
    "authentication",
    "express",
    "nodejs"
  ],
  "author": "Grace Community Church",
  "license": "MIT",
  "dependencies": {
    "express": "^4.18.2",
    "bcryptjs": "^2.4.3",
    "jsonwebtoken": "^9.0.2",
    "helmet": "^7.0.0",
    "cors": "^2.8.5",
    "express-rate-limit": "^6.8.1",
    "express-validator": "^7.0.1",
    "cookie-parser": "^1.4.6",
    "morgan": "^1.10.0",
    "dotenv": "^16.3.1",
    "multer": "^1.4.5-lts.1",
    "sqlite3": "^5.1.6",
    "node-cron": "^3.0.2"
  },
  "devDependencies": {
    "nodemon": "^3.0.1",
    "jest": "^29.6.2",
    "supertest": "^6.3.3",
    "concurrently": "^8.2.0"
  },
  "engines": {
    "node": ">=16.0.0",
    "npm": ">=8.0.0"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/colecoombs/church_project.git"
  }
}