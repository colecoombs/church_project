<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title><%= settings.churchName %></title>
  <link rel="stylesheet" href="/css/styles.css">
  <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/css/all.min.css">
</head>
<body>
  <nav class="navbar">
    <div class="container">
      <h1 class="logo"><%= settings.churchName %></h1>
      <ul class="nav-links">
        <li><a href="#home">Home</a></li>
        <li><a href="#videos">Videos</a></li>
        <li><a href="#contact">Connect</a></li>
        <li><a href="/admin/login" class="admin-link">Admin</a></li>
      </ul>
    </div>
  </nav>

  <section id="home" class="hero">
    <div class="container">
      <div class="hero-content">
        <h2>Welcome to <%= settings.churchName %></h2>
        <p>Join us in worship and fellowship</p>
      </div>
    </div>
  </section>

  <section class="featured-video">
    <div class="container">
      <h2 class="section-title">Latest Message</h2>
      <div class="video-container">
        <% if (videos.featured.type === 'youtube') { %>
          <iframe 
            src="<%= videos.featured.url %>" 
            title="<%= videos.featured.title %>"
            frameborder="0" 
            allow="accelerometer; autoplay; clipboard-write; encrypted-media; gyroscope; picture-in-picture" 
            allowfullscreen>
          </iframe>
        <% } else { %>
          <video controls>
            <source src="<%= videos.featured.url %>" type="video/mp4">
            Your browser does not support the video tag.
          </video>
        <% } %>
        <h3 class="video-title"><%= videos.featured.title %></h3>
      </div>
    </div>
  </section>

  <section id="videos" class="archived-videos">
    <div class="container">
      <h2 class="section-title">Previous Messages</h2>
      <% if (videos.archived.length === 0) { %>
        <p class="no-videos">No archived videos yet. Check back soon!</p>
      <% } else { %>
        <div class="video-grid">
          <% videos.archived.forEach(video => { %>
            <div class="video-card">
              <div class="video-thumbnail">
                <% if (video.type === 'youtube') { %>
                  <% const videoId = video.url.split('/').pop().split('?')[0]; %>
                  <img src="https://img.youtube.com/vi/<%= videoId %>/hqdefault.jpg" alt="<%= video.title %>">
                  <a href="<%= video.url %>" target="_blank" class="play-button">
                    <i class="fas fa-play"></i>
                  </a>
                <% } else { %>
                  <i class="fas fa-video"></i>
                  <a href="<%= video.url %>" target="_blank" class="play-button">
                    <i class="fas fa-play"></i>
                  </a>
                <% } %>
              </div>
              <div class="video-info">
                <h4><%= video.title %></h4>
                <p class="video-date"><%= new Date(video.date).toLocaleDateString() %></p>
              </div>
            </div>
          <% }); %>
        </div>
      <% } %>
    </div>
  </section>

  <section id="contact" class="social-media">
    <div class="container">
      <h2 class="section-title">Connect With Us</h2>
      <div class="social-links">
        <% if (settings.socialMedia.facebook) { %>
          <a href="<%= settings.socialMedia.facebook %>" target="_blank" class="social-icon facebook">
            <i class="fab fa-facebook-f"></i>
          </a>
        <% } %>
        <% if (settings.socialMedia.twitter) { %>
          <a href="<%= settings.socialMedia.twitter %>" target="_blank" class="social-icon twitter">
            <i class="fab fa-twitter"></i>
          </a>
        <% } %>
        <% if (settings.socialMedia.instagram) { %>
          <a href="<%= settings.socialMedia.instagram %>" target="_blank" class="social-icon instagram">
            <i class="fab fa-instagram"></i>
          </a>
        <% } %>
        <% if (settings.socialMedia.youtube) { %>
          <a href="<%= settings.socialMedia.youtube %>" target="_blank" class="social-icon youtube">
            <i class="fab fa-youtube"></i>
          </a>
        <% } %>
      </div>
    </div>
  </section>

  <footer class="footer">
    <div class="container">
      <p>&copy; <%= new Date().getFullYear() %> <%= settings.churchName %>. All rights reserved.</p>
    </div>
  </footer>
</body>
</html>
